<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <!-- favicon -->
    <link href="@Url.Content("~/Content/mytemplate/")img/favicon.png" rel=icon>
    <!-- web-fonts -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,500' rel='stylesheet' type='text/css'>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/mytemplate/")css/bootstrap.min.css" rel="stylesheet">
    <!-- font-awesome -->
    <link href="@Url.Content("~/Content/mytemplate/")fonts/font-awesome/font-awesome.min.css" rel="stylesheet">
    <!-- Mobile Menu Style -->
    <link href="@Url.Content("~/Content/mytemplate/")css/mobile-menu.css" rel="stylesheet">
    <!-- Owl carousel -->
    <link href="@Url.Content("~/Content/mytemplate/")css/owl.carousel.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/mytemplate/")css/owl.theme.default.min.css" rel="stylesheet">
    <!-- Theme Style -->
    <link href="@Url.Content("~/Content/mytemplate/")css/style.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar" >
    <div class="bg"></div>
    <div id="main-wrapper">
        <!-- Page Preloader -->
        <div id="preloader">
            <div id="status">
                <div class="status-mes"></div>
            </div>
        </div>
        <div class="uc-mobile-menu-pusher">
            <div class="content-wrapper">
                @Html.Partial("Header")


                @RenderBody()

            </div>

        </div>
        <!-- #content-wrapper -->
    </div>


    @Html.Partial("Footer")


    <!-- #main-wrapper -->
    <!-- jquery Core-->
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery-2.1.4.min.js"></script>
    <!-- Bootstrap -->
    <script src="@Url.Content("~/Content/mytemplate/")js/bootstrap.min.js"></script>
    <!-- Theme Menu -->
    <script src="@Url.Content("~/Content/mytemplate/")js/mobile-menu.js"></script>
    <!-- Owl carousel -->
    <script src="@Url.Content("~/Content/mytemplate/")js/owl.carousel.min.js"></script>
    <!-- Theme Script -->
    <script src="@Url.Content("~/Content/mytemplate/")js/script.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>