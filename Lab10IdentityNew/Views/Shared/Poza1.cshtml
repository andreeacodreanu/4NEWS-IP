@model ProiectIP.Models.Article

<div class="feature_article_wrapper">
    <div class="feature_article_img">
       
            <img class="img-responsive top_static_article_img" src="~/Content/mytemplate/img/map3_1.jpg"
                 alt="feature-top">
        
    </div>
    <!-- feature_article_img -->
    <div class="feature_article_inner">
        <div class="tag_lg pink"><a>Hot News</a></div>
        <div class="feature_article_title">

            <h1>
                <a href="~/Article/Show/@Model.Id" target="_self">
                    @{
                        var text1 = "";
                        var ok1 = 0;
                        if (Model.Title.Length > 100)
                        {
                            text1 = Model.Title.Substring(0, 100);
                            ok1 = 1;
                        }
                        else
                        {
                            text1 = Model.Title;
                        }
                    }
                    @text1
                    @{
                        if (ok1 == 1)
                        {
                            <a href="Show/@Model.Id">...</a>
                        }
                    }
                </a>
            </h1>

        </div>
        <!-- feature_article_title -->
        <div class="feature_article_date">
            <a> @Model.User.UserName</a>,
            <a>
                @Model.Date
            </a>
        </div>
        <!-- feature_article_date -->
        <div class="feature_article_content">
            @{
                var text = "";
                var ok = 0;
                if (Model.Content.Length > 150)
                {
                    text = Model.Content.Substring(0, 150);
                    ok = 1;
                }
                else
                {
                    text = Model.Content;
                }
            }
            @text
            @{
                if (ok == 1)
                {
                    <a href="Show/@Model.Id">...</a>
                }
            }
        </div>
        <!-- feature_article_content -->
        <div class="article_social">
            <span><i class="fa fa-comments-o"></i><a href="Show/@Model.Id#my_anchor">@ViewBag.poza1</a>Comments</span>
        </div>
        <!-- article_social -->
    </div>
    <!-- feature_article_inner -->
</div>
<!-- feature_article_wrapper -->
