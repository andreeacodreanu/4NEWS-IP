@using System.Diagnostics
<div class="col-md-8">
    <div class="entity_wrapper">
        @if (ViewBag.butonCautare == true)
        {
            foreach (var article in ViewBag.articoleCautate)
            {
                <div class="entity_title header_purple">
                    <h1><a href="#" target="_blank"></a></h1>
                </div>
                <!-- entity_title -->


                <!-- entity_thumb -->
                <div class="entity_title">
                    <a href="~/Article/Show/@article.Id" target="_blank">
                        <h3>
                            @article.Title
                        </h3>
                    </a>
                </div>


                <!-- entity_title -->
                <div class="entity_meta">
                    <a>@article.Date</a>
                    @if (article.Link != null)
                    {
                        <a href="@Url.Content(article.Link)">, upload from: Link</a>
                    }
                    else
                    {
                        <a>, by: @article.User.UserName</a>
                    }

                </div>

                if (article.Image != null)
                {

                    <div class="entity_thumb">
                        <img class="aaa" src="~/Content/mytemplate/img/@Url.Content(article.Image)" alt="feature-top">
                    </div>
                }

                <!-- entity_meta -->
                    <div class="entity_content">
                      
                        @article.Resume

                    </div>
                <div class="entity_footer">
                <div class="entity_tag">
                    <span class="blank"><a href="/Categories/Show/@article.Category.CategoryId">@article.Category.CategoryName</a></span>

                </div>
                <div class="entity_social">
                        <i class="fa fa-comments-o"></i> <a>@article.NrComm Comments</a>                 
                </div>
                   </div>
                if (article.Link != null)
                {
                    <div class="entity_content">
                        <a href="@Url.Content(article.Link)">Read all</a>
                    </div>
                }
            }

        }
        else
        {
        foreach (ProiectIP.Models.Article article in ViewBag.Articles)
        {
          
            <!-- entity_thumb -->
            


            <!-- entity_title -->
                    <div class="entity_meta">

                        @if (article.Link != null)
                        {
                            <div class="entity_title">
                                <a href="@Url.Content(article.Link)" target="_blank">
                                    <h3>
                                        @article.Title
                                    </h3>
                                </a>
                            </div>
                            <a>@article.Date</a>
                            <a href="@Url.Content(article.Link)">, upload from: Link</a>
                        }
                        else
                        {<div class="entity_title">
                                <a href="~/Article/Show/@article.Id" target="_blank">
                                    <h3>
                                        @article.Title
                                    </h3>
                                </a>
                            </div>
                            <a>@article.Date</a>
                            <a>, by: @article.User.UserName</a>
                        }

                        
                    </div>

            if (article.Image != null)
            {

                <div class="entity_thumb">
                    <img class="aaa" src="~/Content/mytemplate/img/@Url.Content(article.Image)" alt="feature-top">
                </div>
                                    }
                                    if (article.Link != null)
                                    {<hr>}
            <!-- entity_meta -->
            if (article.Link == null)
            {
                <div class="entity_content">
                    @article.Resume
                    @*@{
                        var text = "";
                        if (article.Content.Length > 700)
                        {
                            text = article.Content.Substring(0, 700);
                            text = text + "...";
                        }
                        else
                        {
                            text = article.Content;
                        }
                    }
                    @text*@

                </div>
            <div class="entity_footer">
                <div class="entity_tag">
                    <span class="blank"><a href="/Categories/Show/@article.Category.CategoryId">@article.Category.CategoryName</a></span>

                </div>
                <div class="entity_social">
                        <i class="fa fa-comments-o"></i> <a>@article.NrComm Comments</a>                 
                </div>
            </div>
                        
                                
                            }

                        }
        }
    </div>
       
</div>
<!-- col-md-8 -->
