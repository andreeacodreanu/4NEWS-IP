    <section id="category_section" class="category_section">
        <div class="entity_title">

            <h1>@Model.Title</h1>
        </div>
        <!-- entity_title -->

        <div class="entity_meta">
            @Model.Date
        </div>
        <!-- entity_meta -->
        @{
            if (Model.Image != null)
            {
                <div class="entity_thumb">

                    <img class="aaa" src="~/Content/mytemplate/img/@Url.Content(Model.Image)" alt="feature-top">
                </div>
            }
        }
        <!-- entity_thumb -->

        <div class="entity_content">
            <p>
                @Model.Content
            </p>

        </div>
    </section>


</div>

