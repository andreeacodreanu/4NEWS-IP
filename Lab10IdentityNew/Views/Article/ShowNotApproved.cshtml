@model ProiectIP.Models.Article

@{
    ViewBag.Titlu = "4NEWS ";
    Layout = "~/Views/Shared/_mytemplate.cshtml";

}


<div class="centerForm">

    <table>
        <tr>
            <form method="post" action="/Article/Delete/@Model.Id">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button class="btn btn-pink" type="submit">Delete article</button>
            </form>
        </tr>
        &nbsp;
        <tr>
            <form method="post" action="/Article/ShowNotApproved/@Model.Id">
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Title)
                @Html.HiddenFor(m => m.UserId)
                @Html.HiddenFor(m => m.Content)
                @Html.HiddenFor(m => m.CategoryId)
                @Html.HiddenFor(m => m.Image)
                @Html.HiddenFor(m => m.Date)
                <button class="btn btn-pink" type="submit">Approve article</button>
            </form>
        </tr>
    </table>
