@model ProiectIP.Models.Category
@{
    ViewBag.Title = "4NEWS " + Model.CategoryName;
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}
<style>
    .centerForm {
        margin: auto;
        width: 50%;
        padding: 10px;
    }
</style>
<div class="centerForm">
    <ol class="breadcrumb">
        <li><h3>EDIT THE CATEGORY</h3></li>
    </ol>
    <form method="post" action="/Categories/Edit/@Model.CategoryId">
        <div class="panel-body">
            @Html.HttpMethodOverride(HttpVerbs.Put)
            @Html.Label("CategoryName", "Category name")
            <br />
            @Html.EditorFor(m => m.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger " })
            <br /><br />
            
        </div>
        <div class="panel-footer">
            <button class="btn btn-pink" type="submit">Edit category</button>
        </div>
    </form>
</div>

