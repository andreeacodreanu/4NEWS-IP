@model ProiectIP2019.Models.ApplicationUser
@{

    ViewBag.Title = "4NEWS";
    Layout = "~/Views/Shared/_mytemplate.cshtml";

}
<style>
    .centerForm {
        margin: auto;
        width: 50%;
        padding: 10px;
    }
</style>
<div class="centerForm">
<ol class="breadcrumb">
    <li><h3>USERS LIST</h3></li>
</ol>
@foreach (var user in ViewBag.UsersList)
{
    <div class="panel-heading"><i class="glyphicon glyphicon-user"></i>User name: @user.UserName</div>
    <div class="panel-body">
        <i class="glyphicon glyphicon-envelope"></i> Email :
        <span class="label label-default">@user.Email</span>
        <br /><br />

        @if (@user.PhoneNumber != null)
        {
        <i class="glyphicon glyphicon-phone"></i>@:Phone number :<span class="label label-default">@user.PhoneNumber</span>
    }
    </div>
    <div class="panel-footer">
        <a class="btn btn-sm btn-pink" href="/Users/Edit/@user.Id">
            Edit user
        </a>
    </div>
    <br /><br />
}
    </div>
